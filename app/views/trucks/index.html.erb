<h2 class="mb-3">車両情報</h2>
<hr class="mb-4">
<%= search_form_for(@q, url: trucks_path) do |f| %>
  <div class="form-group row">
    <div class="col-3">
      <%= f.label "車格" %>
    </div>
    <div class="col-9">
      <%= f.text_field :car_size_eq, class:"form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-3">
      <%= f.label "荷台" %>
    </div>
    <div class="col-9">
      <%= f.number_field :carrier_eq, class:"form-control" %>
    </div>
  </div>
  <br>
  <%= f.submit '検索', class:"btn btn-primary shadow" %>
<% end %>



<table class="table mt-5">
  <thead class="thead-dark">
    <tr>
      <th scope="col">管理番号</th>
      <th scope="col">最大積載量</th>
      <th scope="col">車格</th>
      <th scope="col">荷台</th>
    </tr>
  </thead>
  <% if @truck_results.present? %>
    <tbody>
      <% @truck_results.each do |truck| %>
        <tr>
          <td><%= truck.truck_number %></td>
          <td><%= truck.load_capacity %></td>
          <td><%= truck.carrier %></td>
          <td><%= truck.car_size %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>
